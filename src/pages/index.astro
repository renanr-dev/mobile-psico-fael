      imgBodySrc={imgBodyAtendimento.src}
      bgColor="#8CB9E1"
      pageId="atendimento"
      client:load
    />

    <TccImagePage
      title="CONHEÇA O MEU TCC"
      text={textTcc}
      imgHeaderSrc={imgTccIcon.src}
      imgBodySrc={imgTcc.src}
      bgColor="#FFFFFF"
